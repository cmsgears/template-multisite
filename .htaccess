BrowserMatch MSIE ie
Header set X-UA-Compatible "IE=Edge,chrome=1" env=ie

RewriteEngine On

# pass all the non uploads and non admin requests to frontend application
RewriteCond %{REQUEST_URI} !^/(cmgdemomultisite/uploads)
RewriteCond %{REQUEST_URI} !^/(cmgdemomultisite/backend/web|cmgdemomultisite/backend)
RewriteRule !(frontend/web) /cmgdemomultisite/frontend/web%{REQUEST_URI} [L]

# pass all the admin requests to admin application
RewriteCond %{REQUEST_URI} ^/(cmgdemomultisite/backend)
RewriteRule !(backend/web) /cmgdemomultisite/backend/web%{REQUEST_URI} [L]

# handle frontend application requests
RewriteCond %{REQUEST_URI} ^/cmgdemomultisite/frontend/web
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)\?*$ /cmgdemomultisite/frontend/web/index.php/$1 [L,QSA]

# handle admin application requests
RewriteCond %{REQUEST_URI} ^/cmgdemomultisite/backend/web
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)\?*$ /cmgdemomultisite/backend/web/index.php/$1 [L,QSA]
